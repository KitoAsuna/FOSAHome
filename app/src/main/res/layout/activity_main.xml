<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="676dp"
        app:layout_constraintBottom_toTopOf="@+id/fosa_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </FrameLayout>

    <RadioGroup
        android:id="@+id/fosa_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/fosa_main"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_main_selector"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_addfood" />

        <RadioButton
            android:id="@+id/fosa_me"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_me_selector"/>
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>